{% extends 'base.html.twig' %}

{% block title %}Accueil - David Binaud{% endblock %}

{% block body %}
    <main class="page lanidng-page">
        {% include('presentation.html.twig') %}
        <section class="portfolio-block photography">
            <div class="container">
                <div class="row no-gutters">
                    {% for project in projects %}
                        <div class="col-md-6 col-lg-4 item zoom-on-hover"><a href="{{ path("project_show", {id: project.id}) }}"><img class="img-fluid image" src="{{ asset(project.picUrl) }}"></a></div>
                    {% endfor %}
                </div>
            </div>
        </section>
        <section class="portfolio-block call-to-action border-bottom"></section>
        <section class="portfolio-block skills">
            <div class="container">
                <div class="heading">
                    <h2>Competences particulieres</h2>
                </div>
                <div class="row" data-aos="fade-down">
                    <div class="col-md-4 d-xl-flex justify-content-xl-center align-items-xl-center">
                        <div class="card special-skill-item border-0">
                            <div class="card-header bg-transparent border-0"><i class="fas fa-server icon" style="background-color: #9f0808;"></i></div>
                            <div class="card-body">
                                <h3 class="card-title">Programmation Back-End</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 d-xl-flex justify-content-xl-center align-items-xl-center">
                        <div class="card special-skill-item border-0">
                            <div class="card-header bg-transparent border-0"><i class="material-icons icon" style="background-color: #9f0808;">web</i></div>
                            <div class="card-body">
                                <h3 class="card-title">Web Design</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 d-xl-flex justify-content-xl-center align-items-xl-center">
                        <div class="card special-skill-item border-0">
                            <div class="card-header bg-transparent border-0"><i class="fas fa-pencil-ruler icon" style="background-color: #9f0808;"></i></div>
                            <div class="card-body">
                                <h3 class="card-title">Conception</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}